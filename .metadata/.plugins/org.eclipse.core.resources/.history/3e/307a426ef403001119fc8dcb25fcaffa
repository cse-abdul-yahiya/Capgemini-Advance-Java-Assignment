 */
package com.capgemini.casee.study;
import java.util.ArrayList;
import java.util.List;
import java.util.Map;
import java.util.stream.Collectors;
/**
 * 
 */
public class EmployeUtility {
	public static void create() {
		List<Employee> empList = new ArrayList<>();
	
		empList.add(new Employee(101, "Abdul", "IT", "Software Engineer", 60000, 2.5));
        empList.add(new Employee(102, "Supriya", "HR", "HR Manager", 55000, 4.0));
        empList.add(new Employee(103, "Aman", "Finance", "Accountant", 45000, 3.0));
        empList.add(new Employee(104, "Neha", "IT", "Senior Developer", 80000, 6.5));
        empList.add(new Employee(105, "Karan", "Marketing", "Marketing Executive", 40000, 1.8));
        empList.add(new Employee(106, "Sneha", "Operations", "Operations Manager", 70000, 5.2));

		
		
				
        
		System.out.println("IT employees with >5 years experience:");
		empList.stream()
		.filter(e->e.getDepartment().equals("IT")).filter(e->e.getYearOfExp()>5).forEach(System.out::println);
	
		double averageSal = empList.stream().mapToDouble(Employee::getSalary).average().orElse(0);
		System.out.println("Average Salary: "+averageSal);
		
		double highestSalary = empList.stream().mapToDouble(Employee::getSalary).max().orElse(0);
		
		System.out.println("Highest Salaryt: "+highestSalary);
		
		long countEmp = empList.stream().count();
		System.out.println("Total Employees: " + countEmp);
		
		Map<String, Long> countEmpByDept = empList.stream().collect(Collectors.groupingBy(Employee::getDepartment, Collectors.counting()));

		countEmpByDept.forEach((dept, count) ->   System.out.println(dept + " : " + count));

     

	}

}
